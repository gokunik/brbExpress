{{!-- This partial is for register which will be loaded inside the modal --}}
<div class="global-container py-1">
    <div id="registerCard" class="card login-form">
        <div class="card-header text-center">Register</div>
        <div class="card-body">
            <div class="card-text">
                <!--
			<div class="alert alert-danger alert-dismissible fade show" role="alert">Incorrect username or password.</div> -->
                <form class="form" action="/register" method="POST" onsubmit="return validate()">
                    <!-- to error: add class "has-danger" -->

                    <div class="userType pb-3">
                        <label for=""> Register as</label>
                        <div class="d-flex">
                            <div class="form-check pr-4">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="optradio" id="user" value="user"
                                        checked />User
                                </label>
                            </div>

                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="optradio" id="volunteer"
                                        value="volunteer" />Volunteer
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="fullName">Your Full Name</label>
                        <input type="text" class="form-control form-control-sm" id="fullName" name="name" required />
                        <span id="nameerr"></span>
                    </div>

                    <div class="form-group">
                        <label for="phoneNo">Your Phone Number</label>
                        <input type="text" class="form-control form-control-sm" id="phoneNo" name="phone" required />
                        <span id="phoneerr"></span>
                    </div>

                    <div class="form-group">
                        <label for="registerEmail">Email address</label>
                        <input type="email" class="form-control form-control-sm" id="registerEmail" name="email"
                            required />
                        <span id="emailerr"></span>
                    </div>

                    <div class="form-group">
                        <label for="registerPassword">Password</label>
                        <div>
                            <input type="password" class="form-control form-control-sm" id="registerPassword"
                                name="password" required />
                            <button type="button" class="btn btn-outline-info btn-sm mt-2" onclick="togglePassword()"><i
                                    class="fa fa-eye " aria-hidden="true"></i> Show
                                password</button>
                            {{!-- script for showing and hiding the pasword. --}}
                            <script>
                                function togglePassword() {
                                    let passwordType = document.getElementById("registerPassword");
                                    passwordType.type === "password" ? passwordType.type = "text" : passwordType.type = "password";
                                }
                            </script>

                        </div>
                        <span id="passerr" style="font-size: 14px;"></span>
                    </div>

                    <div class="form-check-inline">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" required />
                            By clicking, you agree to our Privacy & Terms
                        </label>
                    </div>
                    <button type="submit" id="register_btn" class="btn btn-primary btn-block">
                        Register
                    </button>

                    <div class="sign-up">
                        Already have an account? <a href="#" onclick="login()">Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>