<section class="container py-5">
    <h5 class="text-center text-white">
        Welcome to the <span class="text-warning">Contact Dashboard</span>
    </h5>
</section>

<section class=" mb-5">
    <div class="card border-0">
        <div class="card-header bg-info d-flex justify-content-between align-items-center">
            <h5 class="text-white">Summary</h5>
            <form action="/allmsg" method="get">
                <button type="submit" class="btn btn-danger btn-sm">
                    Load all
                </button>
            </form>
        </div>
        <div class="card-body p-0">
            {{#each nam}}
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between" data-toggle="collapse"
                    data-target="#collapse{{@index}}">
                    <h6 class="text-dark">
                        Message From : {{name}}
                    </h6>
                    <i class="fa fa-caret-down" aria-hidden="true"></i>
                </li>
                <div id="collapse{{@index}}" class="collapse">
                    <ul class="list-group text-dark">
                        <li class="list-group-item border-0">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-white ">Name</span>
                                </div>
                                <p class="form-control">{{name}}</p>
                            </div>
                        </li>
                        <li class="list-group-item border-0">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-white ">Email</span>
                                </div>
                                <p class="form-control">{{email}}</p>
                            </div>
                        </li>
                        <li class="list-group-item border-0">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-white ">Phone</span>
                                </div>
                                <p class="form-control">{{phone}}</p>
                            </div>
                        </li>
                        <li class="list-group-item border-0">
                            <p class="form-control">{{message}}</p>
                        </li>
                    </ul>
                </div>
            </ul>
            {{/each}}
        </div>
    </div>
</section>