{{!-- This partial is for login which will be loaded inside the modal --}}

<div class="global-container">
    <div id="loginCard" class="card login-form">
        <div class="card-header text-center">Log in</div>
        <div class="card-body">
            <div class="card-text">
                <form class="form" action="/login" method="POST">
                    <span id="invalidDiv" style="display:none;color:red">*Invalid email or password</span>
                    <div class="form-group">
                        <label for="loginEmail">Email address</label>

                        <input type="email" class="form-control form-control-sm" id="loginEmail" name="email"
                            required="true" />

                    </div>
                    <div class="form-group">
                        <label for="loginPassword">Password</label>


                        <input type="password" class="form-control form-control-sm" id="loginPassword" name="password"
                            required="true" />
                    </div>
                    <button type="button" onclick='validateForm()' class="btn btn-primary btn-block"
                        id="loginBtn">Login</button>
                    <div class="sign-up">
                        Don't have an account? <a href="#" onclick="register()">Create One</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>